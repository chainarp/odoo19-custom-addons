<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- License Check - List View -->
    <record id="view_license_check_list" model="ir.ui.view">
        <field name="name">license.check.list</field>
        <field name="model">license.check</field>
        <field name="arch" type="xml">
            <list string="License Checks" create="false">
                <field name="name"/>
                <field name="check_date"/>
                <field name="check_type"/>
                <field name="status" decoration-success="status == 'valid'" decoration-warning="status == 'warning'" decoration-danger="status in ('invalid', 'expired', 'tampered', 'hardware_mismatch')"/>
                <field name="fingerprint_match" widget="boolean_toggle"/>
                <field name="days_until_expiry"/>
                <field name="grace_period_active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- License Check - Form View -->
    <record id="view_license_check_form" model="ir.ui.view">
        <field name="name">license.check.form</field>
        <field name="model">license.check</field>
        <field name="arch" type="xml">
            <form string="License Check" create="false" edit="false">
                <header>
                    <button name="action_recheck" type="object" string="Recheck" class="oe_highlight"/>
                    <field name="status" widget="statusbar" statusbar_visible="valid,warning,invalid"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_hardware_info" type="object" class="oe_stat_button" icon="fa-server">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Hardware</span>
                                <span class="o_stat_text">Info</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>

                    <group>
                        <group string="Check Information">
                            <field name="check_date"/>
                            <field name="check_type"/>
                            <field name="fingerprint_match"/>
                            <field name="grace_period_active"/>
                            <field name="grace_period_ends" invisible="not grace_period_active"/>
                        </group>
                        <group string="License Information">
                            <field name="license_expiry"/>
                            <field name="days_until_expiry"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Validation Results" name="validation">
                            <group>
                                <field name="validation_message" nolabel="1" colspan="2" widget="text"/>
                            </group>
                            <group string="Error Details" invisible="not error_details">
                                <field name="error_details" nolabel="1" colspan="2" widget="text"/>
                            </group>
                        </page>

                        <page string="Hardware Information" name="hardware">
                            <group>
                                <group string="Fingerprints">
                                    <field name="hardware_fingerprint"/>
                                    <field name="license_fingerprint"/>
                                </group>
                                <group string="Environment">
                                    <field name="is_docker"/>
                                    <field name="is_vm"/>
                                </group>
                            </group>
                            <group>
                                <group string="System Details">
                                    <field name="machine_id"/>
                                    <field name="mac_address"/>
                                </group>
                                <group string="CPU Details">
                                    <field name="cpu_model"/>
                                    <field name="cpu_cores"/>
                                </group>
                            </group>
                        </page>

                        <page string="File Integrity" name="file_integrity" invisible="files_checked == 0">
                            <group>
                                <group>
                                    <field name="files_checked"/>
                                    <field name="files_modified"/>
                                </group>
                            </group>
                            <group string="Modified Files" invisible="not modified_files">
                                <field name="modified_files" nolabel="1" colspan="2" widget="text"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- License Check - Search View -->
    <record id="view_license_check_search" model="ir.ui.view">
        <field name="name">license.check.search</field>
        <field name="model">license.check</field>
        <field name="arch" type="xml">
            <search string="License Checks">
                <field name="name"/>
                <field name="status"/>
            </search>
        </field>
    </record>

    <!-- License Check - Action -->
    <record id="action_license_check" model="ir.actions.act_window">
        <field name="name">License Checks</field>
        <field name="res_model">license.check</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No license checks performed yet
            </p>
            <p>
                License validation checks will appear here after they are performed.
                Checks can be triggered manually, at startup, or periodically via cron.
            </p>
        </field>
    </record>
</odoo>
