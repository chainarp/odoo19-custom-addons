    <!-- Kanban View -->
    <record id="view_itx_moduler_model_kanban" model="ir.ui.view">
        <field name="name">itx.moduler.model.kanban</field>
        <field name="model">itx.moduler.model</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="model"/>
                <field name="module_id"/>
                <field name="field_count"/>
                <field name="state"/>
                <field name="created_by_ai"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary"><strong><field name="name"/></strong></div>
                                    <div class="o_secondary"><field name="model"/></div>
                                </div>
                            </div>
                            <div class="o_kanban_card_body">
                                <span class="badge text-bg-primary" t-if="record.created_by_ai.raw_value">
                                    <i class="fa fa-magic"/> AI Generated
                                </span>
                                <div>
                                    <i class="fa fa-list"/> <field name="field_count"/> fields
                                </div>
                            </div>
                            <div class="o_kanban_card_footer">
                                <div>
                                    <field name="module_id"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_itx_moduler_model" model="ir.actions.act_window">
        <field name="name">Models</field>
        <field name="res_model">itx.moduler.model</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Model Snapshot
            </p>
            <p>
                Models represent database tables in Odoo. Create a model to define
                the structure of your data, including fields and methods.
            </p>
        </field>
    </record>

