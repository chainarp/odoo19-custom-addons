<?xml version="1.0" encoding="utf-8"?>
<!-- itx_ai_helm/security/ai_helm_security.xml -->
<odoo>
    <record id="ai_conversation_rule_own" model="ir.rule">
        <field name="name">AI Conversation: User can only see own conversations</field>
        <field name="model_id" ref="model_ai_conversation"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="ai_conversation_message_rule_own" model="ir.rule">
        <field name="name">AI Message: User can only see own messages</field>
        <field name="model_id" ref="model_ai_conversation_message"/>
        <field name="domain_force">[('conversation_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
</odoo>