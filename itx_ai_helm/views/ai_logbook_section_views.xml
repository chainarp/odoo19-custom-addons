<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Logbook Section List View -->
    <record id="view_ai_logbook_section_tree" model="ir.ui.view">
        <field name="name">itx.ai.logbook.section.tree</field>
        <field name="model">itx.ai.logbook.section</field>
        <field name="arch" type="xml">
            <list string="Logbook Sections">
                <field name="sequence" widget="handle"/>
                <field name="icon"/>
                <field name="name"/>
                <field name="domain_id"/>
                <field name="section_id"/>
                <field name="is_default"/>
                <field name="is_domain_knowledge"/>
            </list>
        </field>
    </record>

    <!-- Logbook Section Form View -->
    <record id="view_ai_logbook_section_form" model="ir.ui.view">
        <field name="name">itx.ai.logbook.section.form</field>
        <field name="model">itx.ai.logbook.section</field>
        <field name="arch" type="xml">
            <form string="Logbook Section">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="domain_id"/>
                            <field name="section_id"/>
                            <field name="icon"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="is_default"/>
                            <field name="is_domain_knowledge"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1"/>
                    </group>
                    <group string="Classification Hints (for AI)">
                        <field name="keywords" placeholder="keyword1, keyword2, keyword3"/>
                        <field name="example_topics" placeholder="topic1, topic2, topic3"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Logbook Section Action -->
    <record id="action_ai_logbook_section" model="ir.actions.act_window">
        <field name="name">Logbook Sections</field>
        <field name="res_model">itx.ai.logbook.section</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure logbook sections
            </p>
            <p>
                Logbook sections define how knowledge is organized for each domain.
                Default sections are automatically created for Odoo development.
            </p>
        </field>
    </record>

</odoo>
