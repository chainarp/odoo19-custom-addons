<?xml version="1.0" encoding="utf-8"?>
<!-- itx_ai_helm/views/ai_conversation_views.xml -->
<odoo>
    <!-- Tree View -->
    <record id="view_ai_conversation_tree" model="ir.ui.view">
        <field name="name">ai.conversation.tree</field>
        <field name="model">ai.conversation</field>
        <field name="arch" type="xml">
            <list string="AI Conversations">
                <field name="name"/>
                <field name="user_id"/>
                <field name="create_date"/>
                <field name="message_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ai_conversation_form" model="ir.ui.view">
        <field name="name">ai.conversation.form</field>
        <field name="model">ai.conversation</field>
        <field name="arch" type="xml">
            <form string="AI Conversation">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="user_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="workspace"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Messages">
                            <field name="message_ids" readonly="1">
                                <list>
                                    <field name="create_date"/>
                                    <field name="message_type"/>
                                    <field name="content"/>
                                    <field name="status"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ai_conversation" model="ir.actions.act_window">
        <field name="name">Conversations</field>
        <field name="res_model">ai.conversation</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No conversations yet
            </p>
            <p>
                Start a new conversation with Claude AI
            </p>
        </field>
    </record>
</odoo>